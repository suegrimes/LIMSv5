<h5>Listing <%=h Pool.human_attribute_name(:pool_name)%>s</h5>

<table class="table table-bordered table-sm table-font-sm">
  <thead class="thead-light">
  <tr>
    <th>Pool label</th>
	  <th>Pool name</th>
    <th>Description</th>
	  <th>Source Conc</th>
	  <th>Notes</th>
  </tr>
  </thead>

<% for oligo_pool in @oligo_pools %>
  <tr>
	  <td><%=h oligo_pool.tube_label %></td>
	  <td><%=h oligo_pool.pool_name %></td>
    <td><%=h oligo_pool.pool_description %></td>
	  <td><%=h oligo_pool.source_conc_um %></td>
	  <td><%=h oligo_pool.notes %></td>
  </tr>
<% end %>
</table>
