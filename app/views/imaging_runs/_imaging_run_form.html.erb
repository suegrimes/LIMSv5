<div class="card">
  <h6 class="card-header">Imaging Run Details</h6>
  <div class="card-body">

    <div class="form-group row">
      <label for="imaging_key" class="col-sm-2 col-form-label col-form-label-sm text-right">Run Date:</label>
      <div class="col-sm-2">
        <%= f.date_field :run_date, class: "form-control" %>
      </div>

      <label for="protocol_id" class="col-sm-2 col-form-label col-form-label-sm text-right">Imaging Protocol:</label>
      <div class="col-sm-2">
        <%= f.collection_select(:protocol_id, @imaging_protocols, :id, :short_name,
                              {:include_blank => 'Select Protocol'}, class: "form-control") %>
      </div>
    </div>

    <div class="form-group row">
      <label for="imaging_alt_id" class="col-sm-2 col-form-label col-form-label-sm text-right">Imaging Alt ID:</label>
      <div class="col-sm-2">
        <%= f.text_field :imaging_alt_id, class: "form-control" %>
      </div>

      <label for="run_description" class="col-sm-2 col-form-label col-form-label-sm text-right">Run Description:</label>
      <div class="col-sm-4">
        <%= f.text_field :run_description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="notebook_ref" class="col-sm-2 col-form-label col-form-label-sm text-right">Notebook Ref:</label>
      <div class="col-sm-4">
        <%= f.text_field :notebook_ref, class: "form-control" %>
      </div>
    </div>
  </div>
</div>
