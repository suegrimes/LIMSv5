<h5>Categories</h5>

<table class="table table-bordered table-sm table-font-sm">
  <thead class="thead-light">
  <tr>
    <th>Grouping</th>
	  <th>Category</th>
    <th>Category description</th>
	  <th colspan=3></th>
  </tr>
  </thead>

<% for category in @categories %>
  <tr>
    <td><%=h category.cgroup.group_name %></td>
	<td><%=h category.category %></td>
    <td><%=h category.category_description %></td>
    <td><%= link_to 'Show', category %></td>
	<td><% if can? :edit, category %>
        <%= link_to 'Edit', edit_category_path(category) %></td>
	    <% end %></td>
	<td><% if can? :delete, category %>
        <%= link_to 'Delete', category, :confirm => 'Are you sure?', :method => :delete %>
	    <% end %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New category', new_category_path %>
