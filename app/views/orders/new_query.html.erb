<h5>Orders Query</h5>

<%= form_for @item_query, url: list_orders_path do |f| %>
  <%= render '/shared/errors', model: @item_query, header_message: 'Error(s) in query parameters' %>

    <div class="card">
      <h6 class="card-header">Select Parameters</h6>
      <div class="card-body">

        <div class="form-group row">
          <%= f.label(:deliver_site, 'Deliver Site:', class:"col-auto col-form-label col-form-label-sm") %>
          <div class="col-auto">
            <%= f.select(:deliver_site, Item::DELIVER_SITES, {:include_blank => 'All'}, class: "form-control")%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label(:from_date, 'Entered From:', class:"col-auto col-form-label col-form-label-sm") %>
          <div class="col-auto">
            <%= f.date_field(:from_date, class: "form-control") %>
          </div>

          <%= f.label(:to_date, 'To:', class:"col-auto col-form-label col-form-label-sm") %>
          <div class="col-auto">
            <%= f.date_field(:to_date, class: "form-control") %>
          </div>
        </div>
      </div>
    </div>

<%= submit_tag "Submit", class: "btn btn-primary" %>
<%end%>
