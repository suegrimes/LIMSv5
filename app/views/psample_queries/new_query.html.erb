<%= form_for @psample_query, :action => :index, :method => :get do |f| %>
  <!--%= f.error_messages(:header_message => "Error(s) in query parameters") %-->
  <%= render '/shared/errors', model: @psample_query, header_message: 'Error(s) in query parameters' %>

<div class="card">
  <h6 class="card-header">Extracted Samples Query</h6>
  <div class="card-body">

    <div class="form-group row">
      <p class="font-italic font-sm">For barcodes and patients: Enter individual codes separated by commas, enter ranges with '-'. Eg. '1160,1378-1400,1500-1600'</p>
    </div>

    <div class="form-group row">
    <% if can? :read, Patient %>

      <label for="mrn" class="col-auto col-form-label col-form-label-sm">Patient MRN:</label>
      <div class="col-auto">
         <%= f.text_field(:mrn, :size => 10, class: "form-control") %>
      </div>

      <div class="col-auto">
        <strong> -or- </strong>
      </div>

      <label for="patient_id" class="col-auto col-form-label col-form-label-sm">Patient ID(s):</label>
      <div class="col-auto">
        <%= f.text_area(:patient_string, :size => "50x1", class: "form-control")%>
      </div>

    <% else %>

      <label for="patient_id" class="col-auto col-form-label col-form-label-sm">Patient ID(s):</label>
      <div class="col-auto">
        <%= f.text_area(:patient_string, :size => "50x1", class: "form-control")%>
      </div>

    <% end %>
    </div>

    <div class="form-group row">
      <label for="barcode_string" class="col-auto col-form-label col-form-label-sm">Sample Barcode(s):</label>
      <div class="col-auto">
        <%= f.text_area(:barcode_string, :size => "50x1", class: "form-control")%>
      </div>
    </div>
  
    <div class="form-group row">
      <label for="consent_protocol_id" class="col-auto col-form-label col-form-label-sm">Consent Protocol:</label>
      <div class="col-auto">
  	<%= f.collection_select(:consent_protocol_id, @consent_protocols, :id, :name_ver,
                               {:include_blank => 'All'}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form-group row">
      <label for="clinic_or_location" class="col-auto col-form-label col-form-label-sm">Clinic:</label>
      <div class="col-auto">
	<%= f.collection_select(:clinic_or_location, @clinics, :c_value, :c_value,
                               {:include_blank => 'All'}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form-group row">
      <label for="sample_tissue" class="col-auto col-form-label col-form-label-sm">Sample Site:</label>
      <div class="col-auto">
  	    <%= f.collection_select(:sample_tissue, @source_tissue, :c_value, :c_value,
                               {:include_blank => 'All'}, {class: "form-control"}) %>
      </div>
      <label for="sample_type" class="col-auto col-form-label col-form-label-sm">Sample Type:</label>
      <div class="col-auto">
        <%= f.collection_select(:sample_type, @sample_type, :c_value, :c_value,
                               {:include_blank => 'All'}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form-group row">
      <label for="tissue_preservation" class="col-auto col-form-label col-form-label-sm">Preservation:</label>
      <div class="col-auto">
	      <%= f.collection_select(:tissue_preservation, @preservation, :c_value, :c_value,
                               {:include_blank => 'All'}, {class: "form-control"}) %>
      </div>
      <label for="tumor_normal" class="col-auto col-form-label col-form-label-sm">OR Designation:</label>
      <div class="col-auto">
        <%= f.collection_select(:tumor_normal, @tumor_normal, :c_value, :c_value,
                               {:include_blank => 'All'}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form-group row">
      <label for="protocol_id" class="col-auto col-form-label col-form-label-sm">Extraction Protocol:</label>
      <div class="col-auto">
  	<%= f.collection_select(:protocol_id, @protocols, :id, :name_ver,
                             {:include_blank => 'All'}, {class: "form-control"}) %>
      </div>
      <label for="extraction_type" class="col-auto col-form-label col-form-label-sm">Extracted Type:</label>
      <div class="col-auto">
  	<%= f.collection_select(:extraction_type, @extraction_type, :c_value, :c_value,
                             {:include_blank => 'All'}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form-group row">
      <label for="from_date" class="col-auto col-form-label col-form-label-sm">Extraction Date From:</label>
      <div class="col-auto">
<%#= f.datepicker 'from_date', size: 15, dateFormat: "yy-mm-dd", maxDate: '0', changeMonth: true, changeYear: true %>
      <%= f.date_field 'from_date', max: Time.current.to_date, class: "form-control" %>
      </div>

      <label for="to_date" class="col-auto col-form-label col-form-label-sm">To:</label>
      <div class="col-auto">
<%#= f.datepicker 'to_date', size: 15, dateFormat: "yy-mm-dd", maxDate: '0', changeMonth: true, changeYear: true %>
      <%= f.date_field 'to_date', max: Time.current.to_date, class: "form-control" %>
      </div>

      <label for="updated_by" class="col-auto col-form-label col-form-label-sm">Last Upd By:</label>
      <div class="col-auto">
	<%=f.collection_select(:updated_by, @users, :id, :login, {:include_blank => 'Any'}, {class: "form-control"}) %>
      </div>
    </div>

  </div>
</div>

<div class="form-group row">
  <label for="rpt_type" class="col-auto col-form-label col-form-label-sm">Report Type:</label>
  <div class="col-auto">
    <%= select_tag(:rpt_type, options_for_select([["List", "list"], ["Data Table", "data_tables"]]),  {class: "form-control"}) %>
  </div>

  <div class="col-auto">
    <%=submit_tag "Submit", class: "btn btn-primary" %>
  </div>
</div>

<%end%>



