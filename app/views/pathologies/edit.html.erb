<h5>Editing Pathology Report for Patient: <%= @pathology.patient_id %></h5>

<%= render :partial => 'patients/patient_info',  :locals => {:patient => @pathology.patient} %>

<%= form_for(@pathology) do |f| %>
  <%= render '/shared/errors', model: @pathology %>

  <%= render :partial => 'pathology_form', :locals => {:f => f} %>
  
  <%= render :partial => 'clinical_dtls', :locals => {:sample_characteristics => @pathology.sample_characteristics} %>
  
  <%= f.submit "Update" %>
<% end %>
