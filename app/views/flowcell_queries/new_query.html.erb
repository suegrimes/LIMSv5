<%= form_for(@flowcell_query, :action=> 'index', :method => :get) do |f| %>
    <%= render '/shared/errors', model: @flowcell_query, header_message: 'Error(s) in query parameters' %>

    <div class="card">
      <h6 class="card-header">Sequencing Run Query</h6>
      <div class="card-body">
        <div class="form-group row">
          <label for="seq_run_nr" class="col-sm-2 col-form-label col-form-label-sm">LIMS Run#:</label>
          <div class="col-sm-3">
            <%= f.text_field(:seq_run_nr, class: "form-control")%>
          </div>

          <label for="hiseq_xref" class="col-sm-2 col-form-label col-form-label-sm">Seq Run#(search):</label>
          <div class="col-sm-3">
            <%= f.text_field(:hiseq_xref, class: "form-control")%>
          </div>
        </div>

        <div class="form-group row">
          <label for="machine_type" class="col-sm-2 col-form-label col-form-label-sm">Machine Type:</label>
          <div class="col-sm-3">
            <%=f.collection_select(:machine_type, @machine_types, :c_value, :c_value, {:include_blank => '(All)'}, class: "form-control") %>
          </div>
        </div>

        <div class="form-group row">
          <label for="from_date" class="col-auto col-form-label col-form-label-sm">Prepared From:</label>
          <div class="col-auto">
            <%= f.date_field 'from_date', max: Time.current.to_date, class: "form-control" %>
          </div>

          <label for="to_date" class="col-auto col-form-label col-form-label-sm">To:</label>
          <div class="col-auto">
            <%= f.date_field 'to_date', max: Time.current.to_date, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-auto">
        <%=submit_tag "Submit", class: "btn btn-primary" %>
      </div>
    </div>

<%end%>
