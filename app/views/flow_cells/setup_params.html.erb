<h5>Prepare Flow Cell</h5>

<%= form_tag new_flow_cell_path, method: :get do %>
  <div class="card">
    <h6 class="card-header">Libraries for Sequencing</h6>
    <div class="card-body">
      <p class="font-italic font-sm">Enter libraries as integers separated by commas, enter ranges with '-'. Eg. '1160,1378-1400,1599' </p>

      <div class="form-group row">
        <label for="barcode_string" class="col-sm-2 col-form-label col-form-label-sm">Lib Barcode(s):</label>
        <div class="col-sm-3">
          <%= text_field_tag(:barcode_string, '', class: "form-control")%>
        </div>
      </div>

      <div class="form-group row">
        <label for="owner" class="col-sm-2 col-form-label col-form-label-sm">Owner(s):</label>
        <div class="col-sm-3">
          <%= select(:seq_lib, :owner, @owners,
                  {:include_blank => '(All)'}, {size: 3, multiple: :multiple, class: "form-control"}) %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3" style="text-align:left"><%= check_box_tag(:excl_used, 'Y', true)%>&nbsp;Exclude sequenced libs?</div>
      </div>
      </br>

      <div class="form-group row">
        <label for="from_date" class="col-auto col-form-label col-form-label-sm">Prepared From:</label>
        <div class="col-auto">
          <%= date_field_tag :from_date, @from_date, class: "form-control" %>
        </div>

        <label for="to_date" class="col-auto col-form-label col-form-label-sm">To:</label>
        <div class="col-auto">
          <%= date_field_tag :to_date, @to_date, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-auto">
      <%=submit_tag "Submit", class: "btn btn-primary" %>
    </div>
  </div>

<%end%>
