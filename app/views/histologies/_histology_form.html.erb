<div class="card">
  <h6 class="card-header">H&E Slide</h6>
  <div class="card-body">

    <div class="form-group row">
      <label for="he_barcode_key" class="col-auto col-form-label col-form-label-sm">HE barcode:</label>
      <div class="col-auto">
        <%=f.object.he_barcode_key%><%=f.hidden_field(:he_barcode_key)%>
      </div>

      <label for="he_date" class="col-auto col-form-label col-form-label-sm">HE date:</label>
      <div class="col-auto">
        <%=f.date_field :he_date, max: Time.current.to_date, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="pathologist" class="col-auto col-form-label col-form-label-sm">Pathologist:</label>
      <div class="col-auto">
        <%=f.text_field :pathologist, class: "form-control"%>
      </div>

      <label for="histopathology" class="col-auto col-form-label col-form-label-sm">Histopathology:</label>
      <div class="col-auto">
        <%=f.collection_select(:histopathology, @histopathology, :c_value, :c_value,
                               {:include_blank => 'Select histopathology'}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form-group row">
      <label for="tumor_cell_content" class="col-auto col-form-label col-form-label-sm">Tumor cell content:</label>
      <div class="col-auto">
        <%=f.text_field :tumor_cell_content, class: "form-control"%>
      </div>

      <label for="inflammation_type" class="col-auto col-form-label col-form-label-sm">Inflammation:</label>
      <div class="col-auto">
        <%=f.collection_select(:inflammation_type, @inflam_type, :c_value, :c_value,
                               {:include_blank => 'Select inflamm type'}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form-group row">
      <label for="comments" class="col-auto col-form-label col-form-label-sm">Comments:</label>
      <div class="col-auto">
        <%=f.text_area :comments, cols: 60, rows: 2, class: "form-control" %>
      </div>
    </div>

  </div>
</div>
