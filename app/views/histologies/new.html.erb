<h5>New H&E for sample: <%=h @sample.barcode_key%></h5>

<%= render :partial => 'patients/patient_info', :locals => {:patient => @sample.patient}%>

<%= render :partial => 'sample_characteristics/clinical_info', :locals => {:sample_characteristic => @sample.sample_characteristic}%>

<% if @sample.sample_characteristic.pathology %>
  <%= render :partial => 'pathologies/pathology_info', :locals => {:pathology => @sample.sample_characteristic.pathology} %>
<% end %>

<%= render :partial => 'samples/sample_info', :locals => {:sample => @sample} %>

<%= form_for(@histology) do |f| %>
  <%= render '/shared/errors', model: @histology %>
  <%= f.hidden_field(:sample_id) %>

  <%= render :partial => 'histology_form', :locals => {:f => f} %>

  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>


