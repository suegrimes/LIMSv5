<div class="card">
  <h6 class="card-header">Sequencing Kit Details:</h6>
  <div class="card-body">

    <div class="form-group row">
      <%=f.hidden_field(:kit_type, value: 'S') %>

      <label for="kit_name" class="col-auto col-form-label">Kit Name:</label>
      <div class="col-sm-2">
        <%=f.text_field(:kit_name, class: "form-control") %>
      </div>
    </div>

    <div class="form-group row">
      <label for="machine_type" class="col-auto col-form-label">Machine Type:</label>
      <div class="col-sm-3">
        <%=f.collection_select(:machine_type, @machine_types, :c_value, :c_value, class: "form-control") %>
      </div>
    </div>

  </div>
</div>
