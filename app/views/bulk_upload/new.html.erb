<h5>Bulk Upload</h5>
<% @validation_passed ||= 'no' %>
<% @upload_ok ||= 'no' %>

<div class="card">
  <h6 class="card-header">Patients, Samples, Dissections and/or Extractions</h6>
  <div class="card-body col-8">

<%= form_tag({action: 'create'}, multipart: true) do %>

  <div class="form-group row">
    <label for="file" class="col-auto col-form-label-md">File to upload:</label>
    <div class="col-auto">
      <%= file_field_tag :file, accept: @accept_suffixes, class: "btn btn-light", style: "width: 40rem" %>
    </div>
  </div>

  <div class="row-height-20"></div>

  <% if @validation_passed == 'no' && @upload_ok == 'no' %>
    <%= submit_tag "Validate", name: 'action_type[dry_run]', class: "offset-sm-1 btn btn-primary" %>
    <%= submit_tag "Upload",  class: "btn btn-secondary", style: "margin-top: .25rem", disabled: true %>
  <% else %>
    <%= submit_tag "Validate", class: "offset-sm-1 btn btn-secondary",  style: "margin-top: .25rem", disabled: true %>
    <%= submit_tag "Upload", name: 'action_type[upload]', class: "btn btn-primary" %>
  <% end %>
<%end%>

  </div>
</div>
