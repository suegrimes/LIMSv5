<%= form_for @molassay_query, :action => 'index', :method => :get do |f| %>
<%= render '/shared/errors', model: @molassay_query, header_message: 'Error(s) in query parameters' %>

<div class="card">
  <h6 class="card-header">Molecular Assay Query</h6>
  <div class="card-body">

  <div class="form-group row">
    <label for="patient_string" class="col-sm-2 col-form-label col-form-label-sm">Patient ID(s):</label>
    <div class="col-sm-4">
      <%= f.text_field(:patient_string, :size => "50x1", class: "form-control")%>
    </div>
  </div>

  <div class="form-group row">
    <label for="owner" class="col-sm-2 col-form-label col-form-label-sm">Owner(s):</label>
    <div class="col-sm-3">
      <%= f.select(:owner, @owners, {:include_blank => '(All)'},{:size => 3, :multiple => :multiple, class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group row">
    <label for="from_date" class="col-sm-2 col-form-label col-form-label-sm">Assay Date From:</label>
    <div class="col-auto">
      <%= f.date_field 'from_date', max: Time.current.to_date, class: "form-control" %>
    </div>

    <label for="to_date" class="col-auto col-form-label col-form-label-sm">To:</label>
    <div class="col-auto">
      <%= f.date_field 'to_date', max: Time.current.to_date, class: "form-control" %>
    </div>
  </div>

  </div>
</div>

  <div class="form-group row">
    <div class="col-auto">
      <%=submit_tag "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<%end%>
