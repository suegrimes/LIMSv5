<h5>New User</h5>

<%= bootstrap_form_for @user, :url => users_path do |f| %>
<%= render '/shared/errors', model: @user %>
  <%= f.hidden_field :active_inactive, value: 'A' %>
  <%= f.hidden_field :lab_name, value: 'TBD' %>

  <%= f.text_field :login %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation, label: 'Confirm Password' %>

  <%= f.submit "Create User", class: "btn btn-primary" %>
<% end %>
