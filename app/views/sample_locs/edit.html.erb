<h5>Editing Sample Storage Locations</h5>
<%= form_for(@sample_loc) do |f| %>
    <%= render '/shared/errors', model: @sample_loc %>

<%= render :partial => 'sample_loc_info', :locals => {:sample => @sample_loc} %>

<div class="card">
  <h6 class="card-header">Sample Storage Locations(s):</h6>
  <div class="card-body">

    <div class="form-group row">
      <div class="col-sm-2" style="font-weight: bold">Container Type</div>
      <div class="col-sm-3" style="font-weight: bold">Container Name</div>
      <div class="col-sm-2" style="font-weight: bold">Position</div>
      <div class="col-sm-4" style="font-weight: bold">Freezer</div>
    </div>

    <div id="sloc">
      <% i=0 %>
      <%= f.fields_for :sample_storage_containers, :wrapper => 'inline' do |c| %>
          <div class="form-group row">
            <% i += 1 %>
            <%= render :partial => 'sample_storage_container_fields', :locals => {f: c, i: i} %>
          </div>
      <% end %>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 offset-sm-2">
        <%= link_to_add_association 'Add Storage Location', f, :sample_storage_containers %>
      </div>
    </div>

    <%=f.submit "Update", class: "btn btn-primary" %>

  </div>
</div>
<% end %>
